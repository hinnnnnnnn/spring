    @GetMapping("hello-api")
    @ResponseBody
    public Hello helloApi(@RequestParam("name") String name) {
        Hello hello = new Hello();
        hello.setName(name);
        return hello;
    }
    

    static class Hello {
        private String name;

        private String getName() {
            return name;
        }

        public void setName(String name) {
            this.name = name;
        }

    }

