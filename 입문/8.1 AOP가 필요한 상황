    public Long join(Member member) {

        long start = System.currentTimeMillis();
        try { //â­ï¸í•µì‹¬ë¡œì§
            validateDuplicateMember(member); //ê°™ì€ ì´ë¦„ì´ ìˆëŠ” ì¤‘ë³µ íšŒì›X
